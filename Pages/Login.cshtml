@page
@model LoginModel
<link rel="stylesheet" href="/css/app.css">

<div class="login-container">
  <form method="post" class="login-card">
    <h1>Sistema Workspace</h1>
    <p>Acesso institucional</p>

    <input asp-for="Email" placeholder="Email institucional" autocomplete="username" />
    <input asp-for="Senha" type="password" placeholder="Senha" autocomplete="current-password" />

    <button type="submit">Entrar</button>

    @if (!string.IsNullOrEmpty(Model.MensagemErro))
    {
      <div class="erro">@Model.MensagemErro</div>
    }
  </form>
</div>
